{
  "manifest_version": 3,
  "name": "PEEEEP",
  "version": "0.0.3",
  "description": "Make Twitch Chat Readable Again",
  "host_permissions": ["https://*.twitch.tv/*"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "matches": ["https://www.twitch.tv/*"],
      "js": ["./dist/bundle.js"],
      "run_at": "document_end",
      "world": "MAIN"
    }
  ],
  "icons": {
    "128": "icon.png"
  }
}