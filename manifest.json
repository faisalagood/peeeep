{
  "manifest_version": 3,
  "name": "Simple Emote Extension",
  "version": "0.0.2",
  "description": "Make Twitch Chat Readable Again",
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["https://www.twitch.tv/*"],
      "js": ["./bundle.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "128": "icon.png"
  }
}